<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.EditNoteFragment">
    
    <data>
        <variable name="viewModel"
                  type="com.shengbojia.notes.viewmodel.EditNoteViewModel"/>

    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:padding="@dimen/padding_addScreen"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:id="@+id/et_add_title"
                    android:padding="@dimen/padding_addScreen"
                    android:inputType="text"
                    android:text="@{viewModel.note.title}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/et_add_desc"
                    android:padding="@dimen/padding_addScreen"
                    android:text="@{viewModel.note.description}"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/all_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <NumberPicker
                    android:id="@+id/numpicker_add_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:currentPriority="@{viewModel.note.priority}">

            </NumberPicker>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>