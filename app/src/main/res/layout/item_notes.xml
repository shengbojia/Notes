<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_all_note"
        android:layout_marginEnd="@dimen/margin_all_note"
        android:layout_marginStart="@dimen/margin_all_note">

    <RelativeLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_note_priority"
                android:layout_alignParentEnd="true"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_note_title"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:maxLines="1"
                android:layout_toStartOf="@id/tv_note_priority"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_note_desc"
                android:layout_below="@id/tv_note_title"
                android:text="Description"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>