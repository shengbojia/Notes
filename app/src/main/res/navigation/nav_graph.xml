<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/noteListFragment">

    <fragment android:id="@+id/noteListFragment"
              android:name="com.shengbojia.notes.ui.NoteListFragment"
              android:label="Notes"
              tools:layout="@layout/fragment_note_list">

        <action android:id="@+id/action_noteListFragment_to_editNoteFragment"
                app:destination="@id/editNoteFragment"/>

        <action android:id="@+id/action_noteListFragment_to_addNoteFragment"
                app:destination="@id/addNoteFragment"/>

    </fragment>

    <!-- TODO: set different labels for add/edit, consider making it a boolean data -->

    <fragment android:id="@+id/editNoteFragment"
              android:name="com.shengbojia.notes.ui.EditNoteFragment"
              android:label="edit notes"
              tools:layout="@layout/fragment_edit_note">
        <argument
            android:name="noteId"
            app:argType="integer"/>
    </fragment>

    <fragment
            android:id="@+id/addNoteFragment"
            android:name="com.shengbojia.notes.ui.AddNoteFragment"
              android:label="Add note"
            tools:layout="@layout/fragment_add_note"/>
</navigation>