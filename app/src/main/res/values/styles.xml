<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ConfirmationDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="NoteEditTextDescriptionStyle">
        <item name="android:padding">@dimen/padding_itemNotes_horizontal</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/textSize_desc</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:lines">25</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NoteEditTextTitleStyle">
        <item name="android:paddingStart">@dimen/padding_itemNotes_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_itemNotes_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_itemNotes_vertical</item>
        <item name="android:paddingTop">@dimen/padding_itemNotes_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSize_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
