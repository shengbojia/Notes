<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorDarkerGray</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorDarkerGray</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ConfirmationDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="NoteTitleStyle">
        <item name="android:paddingStart">@dimen/padding_itemNotes_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_itemNotes_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_itemNotes_vertical</item>
        <item name="android:paddingTop">@dimen/padding_itemNotes_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textSize_title</item>
    </style>

    <style name="NoteDescriptionStyle">
        <item name="android:padding">@dimen/padding_itemNotes_horizontal</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/textSize_desc</item>
        <!--item name="android:inputType">textMultiLine</item-->
        <item name="android:scrollHorizontally">false</item>
        <!--item name="android:lines">25</item-->
        <item name="android:textColor">@color/colorTextGray</item>
        <!--item name="android:lineSpacingMultiplier">1.5</item-->
    </style>


</resources>
